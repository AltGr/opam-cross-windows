build: [
  [ "env" "TGLS_UNAME_S=Win32"
    "ocaml" "pkg/git.ml" ]
  [ "env" "TGLS_UNAME_S=Win32"
    "ocamlbuild" "-just-plugin" ]
  [ "env" "TGLS_UNAME_S=Win32" "OCAMLFIND_TOOLCHAIN=windows"
    "ocaml" "pkg/build.ml" "native=true" "native-dynlink=true" ]
]
